@page "/login";

@inject NavigationManager NavManager;
@using AntManZooClassLibrary.DTOs;
@using AntManZooClassLibrary.Models;
@using AntManZooBlazor.Services;

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0 d-flex align-items-center">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://resize.prod.femina.ladmedia.fr/rblr/652,438/img/var/2022-07/ant-man.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <EditForm OnSubmit="SubmitStaff" Model="StaffToAdd">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">AntManZoo !</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connectez vous à votre compte</h5>

                                    <div class="form-outline mb-4">
                                        <InputText type="email" id="email" @bind-Value="StaffToAdd!.Email" class="form-control form-control-lg" />
                                        <label class="form-label" for="email">Adresse mail</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="password" @bind-value="StaffToAdd.Password" class="form-control form-control-lg" />
                                        <label class="form-label" for="password">Mot de passe</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Se connecter</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Mot de passe oublié ?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Vous n'avez toujours pas de compte ? Inscrivez-vous <a href="register" style="color: #393f81;">ici</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </EditForm>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


